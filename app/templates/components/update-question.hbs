{{#if updateQuestion}}
    <h4>Edit {{question.owner}}'s {{question.category}} Question</h4>
    <div>
      <form class="new-question">
          <div class="form-group">
              {{input value=author id="author" placeholder="Name"}}
          </div>

          <div class="form-group">
              {{input value=body id="body" placeholder="Question"}}
          </div>

          <div class="form-group">
              {{input value=notes id="notes" placeholder="Notes"}}
          </div>
            <button {{action 'editQuestion' question}}>Post Question Edit</button>
        </form>
    </div>
{{else}}
    <button {{action 'updateQuestion'}}>Edit Question</button>
{{/if}}
